<div class="card shadow mb-4">
    <div class="card-header py-3">
        <button type="button" class="btn btn-primary fa fa-plus-square" data-toggle="modal" data-target="#addmodal">
            Add Bank
        </button>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>No.</th>
                        <th>Nama Bank</th>
                        <th>Nomor Rekening</th>
                        <th>Nama</th>
                        <th>Image</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    <% bank.forEach((data, index) => { %>
                        <tr>
                            <td><%= index + 1 %></td>
                            <td><%= data.nameBank %></td>
                            <td><%= data.nomorRekening %></td>
                            <td><%= data.name %></td>
                            <td>
                                <img src="http://localhost:8000/<%= data.imageUrl %>" alt="imageUrl" width="100">
                            </td>
                            <td>
                                <a href="javascript:void()" type="button" class="btn btn-success fa fa-edit button-update d-inline"
                                    data-id="<%= data.id %>" data-bankname="<%= data.nameBank %>" 
                                    data-rekname="<%= data.nomorRekening %>" data-name="<%= data.name %>">
                                    Edit
                                </a>
                                <form action="/admin/bank/<%= data.id %>?_method=DELETE " method="post" class="d-inline">
                                    <button class="btn btn-danger fas fa-trash-alt" type="submit" onclick="return confirm(`Delete <%= data.nameBank %> ?`)">
                                        Delete
                                    </button>
                                </form>
                            </td>
                        </tr>
                    <% }) %> 
                </tbody>
            </table>
        </div>
    </div>
</div>