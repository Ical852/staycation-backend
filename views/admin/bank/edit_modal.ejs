<div class="modal fade" id="editmodal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
    aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Update Bank</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form method="post" action="/admin/bank?_method=PUT" enctype="multipart/form-data">
                <div class="modal-body">
                    <div class="form-group">
                        <label for="bank_name">Bank Name</label>
                        <input type="text" class="form-control bank_name" id="bank_name" aria-describedby="emailHelp"
                            placeholder="Enter Bank Name" name="bank_name" required>
                    </div>
                    <div class="form-group">
                        <label for="no_rek">No. Rekening</label>
                        <input type="text" class="form-control no_rek" id="no_rek" aria-describedby="emailHelp"
                            placeholder="Enter No. Rekening" name="no_rek" required>
                    </div>
                    <div class="form-group">
                        <label for="name">Name</label>
                        <input type="text" class="form-control name" id="name" aria-describedby="emailHelp"
                            placeholder="Enter Name" name="name" required>
                    </div>
                    <div class="form-group">
                        <label for="image">Image</label>
                        <input type="file" class="form-control image" id="image" aria-describedby="emailHelp"
                            placeholder="Upload Proof" name="image" >
                    </div>
                </div>
                <div class="modal-footer">
                    <input type="hidden" name="id" id="id" class="id">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary">Submit</button>
                </div>
            </form>
        </div>
    </div>
</div>