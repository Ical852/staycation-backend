    <script>
        $('#dataTable').on('click', '.button-feature-update', function () {
            let id = $(this).data('id')
            let name = $(this).data('name')
            let qty = $(this).data('qty')
            $('#editmodalfeature').modal('show')
            $('.qty').val(qty)
            $('.name').val(name)
            $('.id').val(id)
        })

        $('#dataTableActivity').on('click', '.button-activity-update', function () {
            let id = $(this).data('id')
            let name = $(this).data('name')
            let type = $(this).data('type')
            $('#editmodalactivity').modal('show')
            $('.type').val(type)
            $('.name').val(name)
            $('.id').val(id)
        })
    </script>