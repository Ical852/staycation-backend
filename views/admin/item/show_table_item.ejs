<div class="tab-pane fade show active" id="show-item" role="tabpanel" aria-labelledby="home-tab">
    <div class="card shadow mb-4 mt-3">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Data Item</h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>No.</th>
                            <th>Title</th>
                            <th>Price</th>
                            <th>Country</th>
                            <th>City</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% item.forEach((data, index) => { %>
                            <tr>
                                <td><%= index+1 %></td>
                                <td><%= data.title %></td>
                                <td>$<%= data.price %> per nigth</td>
                                <td><%= data.country %></td>
                                <td><%= data.city %></td>
                                <td>
                                    <a href="/admin/item/<%= data.id %> " type="button" class="btn btn-success fa fa-edit button-update d-inline"
                                        data-id="<%= data.id %>" data-name="<%= data.name %> ">
                                        Edit
                                    </a>
                                    <form action="/admin/item/<%= data.id %>?_method=DELETE" method="post" class="d-inline">
                                        <button class="btn btn-danger fas fa-trash-alt" type="submit" onclick="return confirm(`Delete <%= data.title %> ?`)">
                                            Delete
                                        </button>
                                    </form>
                                    <a href="/admin/item/show-image/<%= data.id %>" type="button" class="btn btn-primary fa fa-image button-detail d-inline"
                                        data-id="<%= data.id %>" data-name="<%= data.name %> ">
                                        Image
                                    </a>
                                    <a href="/admin/item/show-detail-item/<%= data.id %> " type="button" class="btn btn-info button-detail d-inline"
                                        data-id="<%= data.id %>" data-name="<%= data.name %> ">
                                        <i class="fa fa-search"></i>
                                        Detail
                                    </a>
                                </td>
                            </tr>
                        <% }) %> 
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
